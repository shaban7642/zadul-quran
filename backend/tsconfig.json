{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "es6",
        "types": [
            "node",
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": false,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "."
    ],
    "exclude": [
        "node_modules/*",
        "node_modules",
        "src/db/migrations",
        "src/db/tasks",
        "src/db/seeders",
        "src/utils/sequelize",
    ]
}