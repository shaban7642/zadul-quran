{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "engines": {
    "node": ">= 12.0.0"
  },
  "scripts": {
    "start": "node dist/src/server.js",
    "clean": "rm -rf ./dist",
    "post-build": "npm run copy-asset",
    "pre-build": "npm run lint & npm run clean",
    "build": "npm run pre-build && npm run build-ts",
    "build-ts": "tsc",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/src/server.js",
    "serve-debug": "nodemon --inspect dist/src/server.js",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "watch": "NODE_ENV=local concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-windows": "set NODE_ENV=local& concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/src/server.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w -w",
    "db:migrate": "sequelize db:migrate",
    "db:migrate:undo": "sequelize db:migrate:undo",
    "db:skeleton": "sequelize migration:generate --name",
    "db:task": "sequelize db:seed:all --seeders-path src/db/tasks/\"{version}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/hpp": "^0.2.2",
    "@types/morgan": "^1.9.4",
    "@types/reflect-metadata": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "concurrently": "^7.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.4.1",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "prettier": "2.0.5",
    "sequelize-cli": "^6.6.1",
    "ts-node": "^8.10.2",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "concurrently": "^8.2.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "jest": "^29.6.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.22",
    "path": "^0.12.7",
    "pg": "^8.11.1",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.32.1",
    "ts-node": "^10.9.1"
  }
}
